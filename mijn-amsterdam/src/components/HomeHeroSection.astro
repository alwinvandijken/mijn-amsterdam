---

import { Image } from 'astro:assets';
import heroImage from '/assets/images/1366x342-algemeen.webp';

---


    <section class="hero-section__section">

        <div class="hero-section__image">
            <picture>
                <Image class="bosserheide-logo" src={heroImage} alt="Logo B&B Bosserheide" />
            </picture>
        </div>
    </section>



<style>
    .hero-section__section {
        margin: 0 auto;
        min-height: clamp(90vh, 100vw, calc(100vh - 10));
        display: grid;


    }

    .hero-section__text {
        justify-self: center;
        max-width: 50rem;
    }

    .hero-btns__container {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .hero-btns__container {
        margin-right: 1rem;
    }

    .hero-section__image {
        display: flex;
    }

    .hero-section__image img {
        width: 100%;
        height: 100%;
        max-height: 80vh;
        object-fit: cover;
        border-radius: 0;
    }

    @media (max-width: 768px) {
        .hero-section__section {
            grid-template-columns: 1fr;
        }
    }
</style>

